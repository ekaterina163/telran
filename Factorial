package com.company;
import java.math.BigInteger; // The factorial of numbers greater than or equal to 13
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int n = s.nextInt();
        int fact = 1;
        int i = 1;

        while(i <= n){
            fact = fact*i;
            System.out.println("iteration number: " + i + " Factorial:" + fact);
            i++;
        }

        System.out.println("Factorial is " + fact);
    }
    }
